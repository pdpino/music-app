<div class="row padding-first-row">
  <div class="col-lg-5">


    <% if @error %>
        <div class="alert alert-dismissible alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <h4>Error en las credenciales.</h4>
          <p>Usuario y/o contraseña son incorrectas. </p>
        </div>
    <% end %>

    <%= form_for(:session, url: login_path, :html => { :class => 'form-horizontal' } ) do |f| %>

        <fieldset>
          <legend>Log in</legend>
          <div class="form-group">
            <label for="session_email" class="col-lg-2 control-label">Username</label>
            <div class="col-lg-10">
              <%= f.email_field :email, :f => 'Email', :class => 'form-control', :placeholder => "Email" %>
            </div>
          </div>
          <div class="form-group">
            <label for="session[password]" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
              <%= f.password_field :password, :placeholder => "Contraseña", :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit "Ingresar", :class => "btn btn-primary" %>
            </div>
          </div>
        </fieldset>
    <% end %>
    <hr>
    <%= link_to "No tengo cuenta.", signup_path %>
  </div>
</div>