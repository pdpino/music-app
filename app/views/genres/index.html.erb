<div class="row padding-first-element">
  <h1>Géneros disponibles</h1>
  <hr>
</div>

<%= render '_search/bar', search_path: genres_path %>

<div class="row padding-first-element">

  <% if @has_permission %>
    <%= link_to 'Crear género', new_genre_path %>
  <% end%>

  <% if @genres.length > 0 then %>

    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <tr><td><%= link_to genre.name, genre %></td></tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
      <p>
        No hay géneros para mostrar
      </p>
  <% end %>

</div>
