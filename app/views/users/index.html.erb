<div class="row padding-first-element">
  <h1> Usuarios registrados</h1>
  <hr>
</div>

<div class="row padding-first-element">
    <% if @users.any? %>
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th class="col-xl-2 col-lg-2 col-md-3 col-sm-6"></th>
            <th></th>
          </tr>
        </thead>

        <tbody>

          <% @users.each do |user| %>
            <tr>
              <td class="col-xl-2 col-lg-2 col-md-3 col-sm-6">
                <img src="<%= (user.photo.blank? ? asset_path('user-default.png') : user.photo) %>"
                     class="img-thumbnail rounded float-left custom-thumbnail" alt="user thumbnail" />
              </td>
              <td>
                <%= link_to user.full_name, user  %>
          	  </td>
              <td>
                <%= render 'follows/update', user: user %>
          		</td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <% else %>
        <p>
          No hay usuarios para mostrar
        </p>
    <% end %>
</div>
