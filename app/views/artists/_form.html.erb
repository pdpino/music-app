<h1> <%= title %> </h1>

<%= form_for(artist) do |f| %>
  <% if artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artist.errors.count, "error") %> No se pudo guardar este artista:</h2>

      <ul>
        <% artist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description, "Descripción" %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :country, "País" %>
    <%= f.text_field :country %>
  </div>

  <div>
    <%= f.label :members, "Integrantes" %>
    <%= f.text_field :members %>
  </div>

  <div>
    <%= f.label :active_since, "Activo desde" %>  <!-- TODO: mejor label -->
    <%= f.date_field :active_since %>
  </div>

  <div>
    <%= f.label :active_until, "Activo hasta" %>
    <%= f.date_field :active_until %>
  </div>

  <div>
    <% if @all_genres.length > 0 then %>
      <h3>Elegir género (s):</h3>
      <% @all_genres.each do |genre| %>
        <%= check_box_tag("all_genres[]", genre.id,
          @song_genres.index { |song_genre| song_genre.id == genre.id }
          ) %>
          <!-- OPTIMIZE index function ???  -->
        <%= label_tag(:all_genres, genre.name) %>
        <br> <!-- HACK: use CSS!!! -->
      <% end %>
    <% else %>
        <p>
          No existen géneros para elegir
        </p>
    <% end %>
  </div>

  <div>
    <%= f.submit "Guardar" %>
  </div>
<% end %>

<%= link_to 'Volver', back_path %>
