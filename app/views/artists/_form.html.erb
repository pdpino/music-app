<%= form_for(artist) do |f| %>
  <% if artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artist.errors.count, "error") %> No se pudo guardar este artista:</h2>

      <ul>
        <% artist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div>
    <%= f.label :members %>
    <%= f.text_field :members %>
  </div>

  <div>
    <%= f.label :active_since %>
    <%= f.text_field :active_since %>
  </div>

  <div>
    <%= f.label :active_until %>
    <%= f.text_field :active_until %>
  </div>

  <div>
    <%= f.submit "Guardar" %>
  </div>
<% end %>
