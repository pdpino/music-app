<%= link_to "Volver a todas las noticias", news_index_path %>
<h2><%= @news.title %></h2>
<%= @news.created_at.strftime("%Y-%b-%d %H:%M") %>
<br>

<% if @has_permission %>
  <%= link_to 'Editar', edit_news_path(@news) %>
  <%= link_to 'Eliminar', @news, method: :delete, data: { confirm: 'EstÃ¡ seguro?' } %>
  <br> <!-- HACK: use CSS instead of this -->
<% end %>

<div>
  <img src="<%= @news.image_src %>" height="300" width="300" alt="news image">
</div>

<p><%= @news.content %></p>

<h3>Artistas:</h3>
<%= render 'artists/index-snippet', artists: @news.artists_news %>

<h3>Canciones:</h3>
<%= render 'songs/index-snippet', songs: @news.songs_news %>

<h3>Albums:</h3>
<%= render 'albums/index-snippet', albums: @news.albums_news %>
